<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.markjlehman.breakthecode.PartnersActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appCampImage"
        android:src="@drawable/app_camp_for_girls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:text="@string/app_camp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appCampTitle"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/appCampImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_camp_description"
        android:id="@+id/appCampDescription"
        android:layout_marginTop="62dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/appCampImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
